<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="ECARE" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.tsystems.ecare.entities.Contract</class>
        <class>com.tsystems.ecare.entities.Customer</class>
        <class>com.tsystems.ecare.entities.Plan</class>
        <class>com.tsystems.ecare.entities.Address</class>
        <class>com.tsystems.ecare.entities.Feature</class>
        <properties>
            <!-- Database connection configuration -->
            <property name="hibernate.connection.driver_class" value="net.sf.log4jdbc.DriverSpy"/>
            <property name="hibernate.connection.url" value="jdbc:log4jdbc:mysql://localhost:3306/ecare"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <!-- SQL displaying configuration -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>