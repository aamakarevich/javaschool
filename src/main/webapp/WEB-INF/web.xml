    <init-param>
      <param-name>allowed-urls</param-name>
      <param-value>/index.html</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>-->

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.tsystems.ecare.controllers.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/rest/login/</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>users</servlet-name>
    <servlet-class>com.tsystems.ecare.controllers.UsersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>users</servlet-name>
    <url-pattern>/users.html</url-pattern>
  </servlet-mapping>

  <!-- REST -->
  <servlet>
    <servlet-name>customer</servlet-name>
    <servlet-class>com.tsystems.ecare.controllers.CustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>customer</servlet-name>
    <url-pattern>/rest/customer/</url-pattern>
  </servlet-mapping>
  <!-- end REST -->

  <listener>
    <listener-class>com.tsystems.ecare.listeners.ServletContextListenerImpl</listener-class>
    <listener-class>com.tsystems.ecare.listeners.ServletRequestListenerImpl</listener-class>
  </listener>
</web-app>
